<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yackeen.ta3allam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yackeen.ta3allam.Activity.LaunchScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yackeen.ta3allam.Activity.Login" />
        <activity
            android:name="com.yackeen.ta3allam.Activity.Register"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.yackeen.ta3allam.Activity.Login"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Login" />
        </activity>
        <activity
            android:name="com.yackeen.ta3allam.Activity.ForgetPassword"
            android:label="@string/title_activity_forget_password"
            android:parentActivityName="com.yackeen.ta3allam.Activity.Login"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Login" />
        </activity>
        <activity android:name="com.yackeen.ta3allam.Activity.FBLogin" />
        <activity
            android:name="com.yackeen.ta3allam.Activity.ForgetPassword2"
            android:label="@string/title_activity_forget_password2"
            android:parentActivityName="com.yackeen.ta3allam.Activity.ForgetPassword"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.ForgetPassword" />
        </activity>
        <activity
            android:name="com.yackeen.ta3allam.Activity.FirstLogin"
            android:label="@string/title_activity_first_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.yackeen.ta3allam.Activity.FirstLoign2"
            android:label="@string/title_activity_first_loign2"
            android:parentActivityName="com.yackeen.ta3allam.Activity.FirstLogin"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.FirstLogin" />
        </activity>
        <activity
            android:name="com.yackeen.ta3allam.Activity.Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.facebook.CustomTabMainActivity" />
    </application>

</manifest>