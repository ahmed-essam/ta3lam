<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:background="@drawable/rounded_with_border_button"
    android:padding="10dp">
    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_marginLeft="5dp"
        android:id="@+id/donut_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:donut_progress="0"
        app:donut_finished_color="@color/colorAccent"
        app:donut_inner_bottom_text_color="@color/colorAccent"
        app:donut_text_color="@color/colorAccent"
        app:donut_text_size="15sp"
        app:donut_finished_stroke_width="4dp"
        app:donut_unfinished_stroke_width="4dp"
        android:layout_gravity="right"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="right"
        android:gravity="right"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_name"
            android:textSize="20sp"
            android:textColor="@color/black_overlay"
            android:text="اسم الكتاب"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emam_name"
            android:text="اسم الامام"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>


</LinearLayout>