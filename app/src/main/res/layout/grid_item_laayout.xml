<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gride_border"
    android:padding="7dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_marginLeft="5dp"
        android:id="@+id/donut_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:donut_progress="0"
        app:donut_finished_color="@color/colorAccent"
        app:donut_inner_bottom_text_color="@color/colorAccent"
        app:donut_text_color="@color/colorAccent"
        app:donut_text_size="12sp"
        app:donut_finished_stroke_width="3dp"
        app:donut_unfinished_stroke_width="3dp"
        android:layout_gravity="right"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_name"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="اسم الكتاب"
            android:maxLines="1"
            android:layout_gravity="right|center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emam_name"
            android:text="اسم الامام"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_gravity="right|center_vertical"/>


    </LinearLayout>


</LinearLayout>