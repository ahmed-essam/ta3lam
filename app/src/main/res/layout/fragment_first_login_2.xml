<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:elevation="@dimen/fabElevation"
            android:background="@color/colorPrimary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="75"
            android:background="@color/colorLayoutBackground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:elevation="@dimen/toolbarElevation"
        android:orientation="vertical"
        android:background="@drawable/background_recycler_view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/padding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_body_size"
            android:text="اختر بعض الكتب"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/colorDivider"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:padding="@dimen/padding"
            android:id="@+id/first_login_recyclerview2"/>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/edit_text_padding"
            android:paddingBottom="@dimen/edit_text_padding"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/text_subheading_size"
            android:background="@drawable/button_login_selector"/>

    </LinearLayout>

</FrameLayout>
