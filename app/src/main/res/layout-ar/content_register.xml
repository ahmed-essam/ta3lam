<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yackeen.ta3allam.Register"
    tools:showIn="@layout/activity_register">
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_myplaces"
        android:hint="الاسم"
        android:layout_margin="12dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColorHint="@android:color/holo_green_dark"
        android:layout_above="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="البريد الالكترونى"
        android:drawableRight="@android:drawable/sym_action_email"
        android:layout_margin="12dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColorHint="@android:color/holo_green_dark"
        android:layout_above="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="كلمة المرور"
        android:drawableRight="@android:drawable/ic_lock_idle_lock"
        android:layout_margin="12dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColorHint="@android:color/holo_green_dark"
        android:layout_above="@+id/register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="التسجيل "
        android:textColor="@android:color/white"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
